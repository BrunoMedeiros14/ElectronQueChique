{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/ui/*": [
        "./src/ui/*"
      ],
      "@/components/*": [
        "./src/ui/components/*"
      ],
      "@/lib/*": [
        "./src/ui/components/lib/*"
      ]
    }
  }
}